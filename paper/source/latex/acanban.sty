% Bibliography as an appendix
\usepackage[numbib]{tocbibind}
\renewenvironment{sphinxthebibliography}[1]
                 {\if@openright\cleardoublepage\else\clearpage\fi
                  \begin{thebibliography}{69}}
                 {\end{thebibliography}}

% Ignore hard-coded bibliography label
\let\origbibitem\bibitem
\renewcommand{\bibitem}[2][label]{\origbibitem{#2}}

% Number \subsection
\setcounter{secnumdepth}{3}

% Ignore hardcoded footnote numbering
\makeatletter
\def\FNH@footnoteenv@i[#1]{\FNH@footnoteenv}
\def\FNH@footnotetextenv@i[#1]{\FNH@footnotetextenv}
\makeatother

% Headers and footers
\fancypagestyle{normal}{
  \fancyhf{}
  \fancyfoot[C]{\thepage}
  \renewcommand{\headrulewidth}{0pt}
  \renewcommand{\footrulewidth}{0pt}}
\fancypagestyle{plain}{
  \fancyhf{}
  \fancyfoot[C]{\thepage}
  \renewcommand{\headrulewidth}{0pt}
  \renewcommand{\footrulewidth}{0pt}}
\setlength{\parindent}{1.5em}
\setlength{\parskip}{1.2pt}
